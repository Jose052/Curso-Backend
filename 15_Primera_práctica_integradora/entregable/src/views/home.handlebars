<table>  
  <tr>
    <th>Productos</th>
    <th>Descripcion</th>
    <th>Imagen</th>
    <th>Precio</th>
    <th>Codigo</th>
    <th>Stock</th>
    <th>Id del producto</th>
  </tr>
    {{#each products}}
        <tr>
            <td>{{this.title}}</td>
            <td>{{this.description}}</td>
            <td>{{this.price}}</td>
            <td>{{this.tdumbnail}}</td>
            <td>{{this.code}}</td>
            <td>{{this.stock}}</td>
            <td>{{this._id}}</td>
